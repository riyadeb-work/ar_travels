    /* =========================================
       LOADER STYLES
    ========================================= */
    #loader-wrapper {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #ffffff;
      z-index: 9999;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      transition: opacity 0.5s ease-out, visibility 0.5s;
    }

    .loader-hidden {
      opacity: 0;
      visibility: hidden;
    }

    .car-animation {
      font-size: 3rem;
      color: #00273d; /* Brand Blue */
      position: relative;
      /* Start from left, move to center, pause, move right */
      animation: driveAcross 2.5s ease-in-out infinite;
    }

    .road-line {
      width: 150px;
      height: 3px;
      background-color: #f7c600; /* Brand Yellow */
      margin-top: 10px;
      border-radius: 2px;
      opacity: 0.7;
    }

    @keyframes driveAcross {
      0% {
        transform: translateX(-100px);
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      40% {
        transform: translateX(0);
      }
      70% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(100px);
        opacity: 0;
      }
    }
  </style>
