<script>
  // 1. Dynamic Year for Footer
  document.getElementById('year').textContent = new Date().getFullYear();

  // 2. Countdown Timer Logic
  // Set your specific launch date and time here
  // Format: "Month Day, Year HH:MM:SS"
  const targetDateString = "January 31, 2026 00:00:00"; // <--- CHANGE THIS DATE
  const targetTime = new Date(targetDateString).getTime();

  const countdownElement = document.getElementById('countdown');
  let timerInterval;

  function updateTimer() {
    const now = new Date().getTime();
    const distance = targetTime - now;

    // If the count down is finished, hide the counter
    if (distance < 0) {
      countdownElement.style.display = 'none';
      if (timerInterval) clearInterval(timerInterval);
      return;
    }

    // Time calculations
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    // HTML Structure for each time unit
    const createTimeBox = (value, label) => `
                <div class="timer-box flex flex-col items-center justify-center p-4 rounded-lg shadow-lg backdrop-blur-md">
                    <span class="text-3xl md:text-4xl font-bold text-white font-mono">${value < 10 ? '0' + value : value}</span>
                    <span class="text-brand-yellow text-xs md:text-sm uppercase tracking-wider mt-1">${label}</span>
                </div>
            `;

    // Render
    countdownElement.innerHTML =
      createTimeBox(days, 'Days') +
      createTimeBox(hours, 'Hours') +
      createTimeBox(minutes, 'Minutes') +
      createTimeBox(seconds, 'Seconds');
  }

  // Run immediately then every second
  updateTimer();
  timerInterval = setInterval(updateTimer, 1000);

  // 3. Smooth Fade In Animation (Simple Intersection Observer)
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('opacity-100', 'translate-y-0');
          entry.target.classList.remove('opacity-0', 'translate-y-10');
        }
      });
    });
    // Add 'opacity-0 translate-y-10 transition-all duration-700' to elements you want to animate if expanding later
  });

  // 4. Loader Logic
  window.addEventListener('load', () => {
    // Keep loader for at least 2 seconds so animation is visible
    setTimeout(() => {
      const loader = document.getElementById('loader-wrapper');
      loader.classList.add('loader-hidden');

      // Remove from DOM after transition completes to clean up
      loader.addEventListener('transitionend', () => {
        loader.remove();
      });
    }, 2000);
  });
</script>
