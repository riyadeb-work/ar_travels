# ==========================
# Drupal 11 Composer-based
# Docroot:
# ==========================

# ======================================
# Composer
# ======================================
/vendor/
/composer.lock
/composer.phar

# ======================================
# Drupal files and temporary stuff
# ======================================

# Drupal core files managed by Composer
/core/
/modules/contrib/
/profiles/contrib/
/themes/contrib/
/libraries/
/sites/*/files/
!/sites/example.com/files/README.txt

# Ignore settings and services override files (but track example)
/sites/*/settings*.php
!/sites/default/settings.example.php
/sites/*/services*.yml
!/sites/default/default.services.yml

# Ignore private files directory
/private/

# Ignore generated CSS/JS
/sites/*/assets/
web/sites/*/css/
web/sites/*/js/

# Ignore sync directory if outside web root (optional)
# /config/

# Ignore database exports
*.sql
*.sqlite
*.sql.gz
*.sql.zip

# Ignore temporary or backup files
*.log
*.tar
*.gz
*.zip
*.bak
*.tmp
*.swp
*.swo
*.DS_Store
Thumbs.db

# Ignore IDE and OS files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# Node, frontend build artifacts (optional)
node_modules/
npm-debug.log
yarn-error.log
/themes/custom/**/node_modules/
/themes/custom/**/dist/
/themes/custom/**/build/

# Ignore PHPUnit test outputs
phpunit.xml
phpunit.result.cache

# Ignore Lando, DDEV, Docker, etc. (optional)
.lando.local.yml
/.ddev/
/docker-compose.yml
/.env
.env.*

# Drush specific
/drush/backups/
/drush/sites/self.site.yml
/drush/config/

# Ignore custom patches directory
/patches/

# ======================================
# Allow tracking custom & config stuff
# ======================================

# Track custom code and config
!/modules/custom/
!/themes/custom/
!/profiles/custom/
!/libraries/custom/
!/sites/*/modules/custom/
!/sites/*/themes/custom/

# Track config sync if in version control
!/config/
!/config/sync/

# Track custom settings if needed
!/sites/default/settings.local.php

/.csslintrc
/.eslintignore
/.eslintrc.json
/.ht.router.php
/.htaccess
/INSTALL.txt
/README.md
/autoload.php
/example.gitignore
/index.php
/robots.txt
/update.php
